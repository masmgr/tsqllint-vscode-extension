{
    "name": "tsqllint",
    "description": "A VS Code Extension For TSQLLint",
    "author": "Nathan Boyd",
    "license": "MIT",
    "version": "1.3.0",
    "publisher": "tsqllint",
    "categories": [
        "Linters"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "TSQLLint Configuration",
            "properties": {
                "tsqlLint.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the language server."
                },
                "tsqlLint.autoFixOnSave": {
                    "scope": "window",
                    "type": "boolean",
                    "default": false,
                    "description": "Auto fix supported linting errors on save."
                }
            }
        },
        "commands": [
            {
                "command": "tsqlLint.fix",
                "title": "TSQL Lint: Fix"
            }
        ],
        "keybindings": [
            {
                "command": "tsqlLint.fix",
                "key": "ctrl+alt+f",
                "mac": "shift+cmd+f"
            }
        ]
    },
    "icon": "images/icon.png",
    "activationEvents": [
        "onLanguage:sql"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tsqllint/tsqllint-vscode-extension"
    },
    "engines": {
        "vscode": "^1.82.0"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.9.0",
        "@types/sinon": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^2.15.0",
        "conventional-changelog": "^2.0.1",
        "eslint": "^8.14.0",
        "glob": "^11.0.0",
        "mocha": "^10.8.2",
        "prettier": "^3.7.4",
        "release-it": "^15.6.0",
        "sinon": "^19.0.2",
        "standard": "^11.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "vsce": "^1.42.0"
    },
    "scripts": {
        "lint": "eslint -c .eslintrc.js --ext .ts",
        "format": "prettier --ignore-path .prettierignore --write \"**/*.{ts,js,tsx,jsx,md,css,scss,html}\"",
        "build-changelog": "conventional-changelog -i CHANGELOG.md -u -s -r 0 && git add CHANGELOG.md",
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile:client": "tsc -p ./client/tsconfig.json",
        "compile:server": "tsc -p ./server/tsconfig.json",
        "watch:client": "tsc -w -p ./client/tsconfig.json",
        "watch:server": "tsc -w -p ./server/tsconfig.json",
        "compile:e2e-fixtures": "node scripts/copy-e2e-fixtures.js",
        "compile": "npm run compile:client && npm run compile:server && npm run compile:e2e-fixtures",
        "test:unit": "cd server && mocha",
        "test:unit:watch": "cd server && mocha --watch",
        "test:integration": "npm run compile && vscode-test --label integration",
        "test:e2e": "npm run compile && vscode-test --label e2e",
        "test:e2e:verbose": "npm run compile && vscode-test --label e2e -- --grep '.*'",
        "test:ci": "npm run test:unit && npm run test:integration",
        "test": "npm run test:ci",
        "test:server": "npm run test:unit",
        "test:smoke": "npm run test:integration",
        "test:all": "npm run test:ci",
        "test:server:watch": "npm run test:unit:watch",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "volta": {
        "node": "22.21.1"
    }
}